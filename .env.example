# Polarion Configuration
POLARION_ENV=mock
POLARION_API_URL=https://polarion.example.com/api
POLARION_API_KEY=your-api-key-here
POLARION_USERNAME=admin
POLARION_PASSWORD=admin-password

# Mock Server Configuration
MOCK_HOST=0.0.0.0
MOCK_PORT=5000
MOCK_DEBUG=True
ENABLE_WEBSOCKET=True
MOCK_DATA_DIR=./data/fixtures

# Testing Configuration
TEST_PARALLEL=True
TEST_TIMEOUT=300
TEST_RETRIES=3
COVERAGE_THRESHOLD=80

# Performance Settings
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60
SIMULATED_LATENCY_MS=0
MAX_REQUEST_SIZE_MB=10

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/polarion-mock.log
ENABLE_REQUEST_LOGGING=True

# Dashboard Configuration
DASHBOARD_PORT=8050
DASHBOARD_DEBUG=True
DASHBOARD_UPDATE_INTERVAL_SECONDS=5

# Security Settings
JWT_SECRET_KEY=change-this-in-production
SESSION_TIMEOUT_MINUTES=30
ENABLE_CORS=True
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Database/Storage
STORAGE_TYPE=memory  # memory, sqlite, postgres
SQLITE_DATABASE_PATH=./data/polarion-mock.db
POSTGRES_CONNECTION_STRING=postgresql://user:password@localhost/polarion_mock

# Feature Flags
ENABLE_API_DOCS=True
ENABLE_MOCK_PERSISTENCE=False
ENABLE_PERFORMANCE_TRACKING=True
ENABLE_SECURITY_HEADERS=True