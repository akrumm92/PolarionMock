# Polarion Configuration
POLARION_ENV=mock
# Polarion base URL (e.g., https://polarion.example.com)
POLARION_BASE_URL=https://polarion.example.com
# Polarion REST API v1 endpoint (typically /polarion/rest/v1)
POLARION_REST_V1_PATH=/polarion/rest/v1
# Polarion legacy API endpoint (typically /polarion/api) 
POLARION_API_PATH=/polarion/api
# Personal Access Token (PAT) for Polarion API authentication
POLARION_PERSONAL_ACCESS_TOKEN=your-personal-access-token-here
# SSL Verification - set to false if Polarion uses self-signed certificates
POLARION_VERIFY_SSL=false


# Mock Server Configuration
MOCK_HOST=0.0.0.0
MOCK_PORT=5000
MOCK_DEBUG=True
ENABLE_WEBSOCKET=True
MOCK_DATA_DIR=./data/fixtures

# Testing Configuration
TEST_PROJECT_ID=myproject
TEST_PARALLEL=True
TEST_TIMEOUT=300
TEST_RETRIES=3
COVERAGE_THRESHOLD=80
# Allow destructive tests (create/update/delete) in production - USE WITH CAUTION!
ALLOW_DESTRUCTIVE_TESTS=false

# Test Data IDs for Production Testing
# These IDs should reference real objects in your Polarion instance when testing against production
# For mock testing, these are ignored and default test data is used
# TIP: Run discovery tests first to find valid IDs: python run_tests.py --env production --test tests/moduletest/test_discovery.py
TEST_DOCUMENT_ID=elibrary/_default/requirements  # Format: project/space/document
TEST_WORK_ITEM_ID=myproject/WI-001  # Format: project/workitem-id
TEST_SPACE_ID=_default  # Document space to use for tests
# Optional: Additional test documents for specific test cases
TEST_DOCUMENT_WITH_PARTS_ID=  # Document that has parts/sections
TEST_DOCUMENT_WITH_WORKITEMS_ID=  # Document containing work items

# Performance Settings
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60
SIMULATED_LATENCY_MS=0
MAX_REQUEST_SIZE_MB=10

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/polarion-mock.log
ENABLE_REQUEST_LOGGING=True

# Dashboard Configuration
DASHBOARD_PORT=8050
DASHBOARD_DEBUG=True
DASHBOARD_UPDATE_INTERVAL_SECONDS=5

# Security Settings
JWT_SECRET_KEY=change-this-in-production
MOCK_AUTH_TOKEN=your-jwt-token-here
DISABLE_AUTH=false  # Set to true to disable authentication (development only!)
SESSION_TIMEOUT_MINUTES=30
ENABLE_CORS=True
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Database/Storage
STORAGE_TYPE=memory  # memory, sqlite, postgres
SQLITE_DATABASE_PATH=./data/polarion-mock.db
POSTGRES_CONNECTION_STRING=postgresql://user:password@localhost/polarion_mock

# Feature Flags
ENABLE_API_DOCS=True
ENABLE_MOCK_PERSISTENCE=False
ENABLE_PERFORMANCE_TRACKING=True
ENABLE_SECURITY_HEADERS=True